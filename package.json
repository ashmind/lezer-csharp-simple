{
  "name": "lezer-csharp-simple",
  "version": "0.0.1",
  "description": "lezer-based C# grammar",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "lezer-generator src/csharp.grammar -o src/parser && rollup -c",
    "build-debug": "lezer-generator src/csharp.grammar --names -o src/parser && rollup -c",
    "prepare": "npm run build",
    "test": "jest test/*.ts",
    "test-build": "lezer-generator src/csharp.grammar --names -o src/parser && rollup -c && jest test/*.ts"
  },
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.cjs"
  },
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "eslint": "^6.8.0",
    "jest": "^25.4.0",
    "lezer-generator": "^0.8.3",
    "rollup": "^1.10.0",
    "rollup-plugin-node-resolve": "^4.2.3",
    "ts-jest": "^25.4.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "lezer": "^0.8.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ashmind/lezer-csharp.git"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "transformIgnorePatterns": [ "/node_modules/(?!lezer-generator)" ],
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/test/tsconfig.json"
      }
    }
  }
}
